class program1 {
    public static void main(String args[]){
        // static int sum(int[] arr)

        int[] arr = {1,2,3,4,5,6};
        int result= sum(arr);
        System.out.println(result);
    }

    static int sum(int[] arr){
        int sum =0;
        int i=0;
        while(i<arr.length){
            sum = sum+ arr[i];
            i++;
        }

        return sum;
    }
}
